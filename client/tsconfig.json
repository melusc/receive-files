{
	"extends": ["../tsconfig.json", "@tsconfig/svelte"],
	"compilerOptions": {
		"moduleResolution": "bundler",

		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"strict": true
	},
	"include": ["src/**/*.ts", "src/**/*.svelte", "../shared/*"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
