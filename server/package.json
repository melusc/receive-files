{
	"name": "server",
	"private": true,
	"packageManager": "yarn@4.9.1",
	"type": "module",
	"engines": {
		"node": ">=22.15.1"
	},
	"dependencies": {
		"@inquirer/confirm": "^5.1.10",
		"client": "workspace:^",
		"express": "^5.1.0",
		"get-port": "^7.1.0",
		"multer": "^2.0.0"
	},
	"devDependencies": {
		"@lusc/eslint-config": "^7.2.0",
		"@lusc/tsconfig": "^7.0.0",
		"@types/express": "^5.0.1",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.15.18",
		"concurrently": "^9.1.2",
		"esbuild": "^0.25.4",
		"eslint": "^9.26.0",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3"
	},
	"scripts": {
		"build": "yarn clean && yarn tsc && yarn esbuild",
		"build:w": "yarn build --watch",
		"esbuild": "esbuild --outdir=dist --format=esm --platform=node --bundle --sourcemap --packages=external src/server.ts",
		"start:w": "node --watch dist/server.js",
		"start": "node dist/server.js",
		"dev": "concurrently yarn:build:w yarn:start:w",
		"clean": "rimraf dist",
		"fmt": "eslint --fix"
	}
}
