{
	"name": "server",
	"private": true,
	"type": "module",
	"engines": {
		"node": "^24.7.0"
	},
	"dependencies": {
		"@inquirer/confirm": "^5.1.16",
		"client": "workspace:^",
		"express": "^5.1.0",
		"get-port": "^7.1.0",
		"multer": "^2.0.2"
	},
	"devDependencies": {
		"@lusc/eslint-config": "^7.4.2",
		"@lusc/tsconfig": "^7.1.0",
		"@types/express": "^5.0.3",
		"@types/multer": "^2.0.0",
		"@types/node": "^24.3.1",
		"concurrently": "^9.2.0",
		"esbuild": "^0.25.9",
		"eslint": "^9.34.0",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.2"
	},
	"scripts": {
		"build": "pnpm clean && pnpm tsc && pnpm esbuild",
		"build:w": "pnpm esbuild -- --watch",
		"esbuild": "esbuild --outdir=dist --format=esm --platform=node --bundle --sourcemap --packages=external src/server.ts",
		"start:w": "node --watch dist/server.js",
		"start": "node dist/server.js",
		"dev": "concurrently pnpm:build:w pnpm:start:w",
		"clean": "rimraf dist",
		"fmt": "eslint --fix"
	}
}
