{
	"name": "server",
	"private": true,
	"packageManager": "yarn@3.6.0",
	"type": "module",
	"dependencies": {
		"@koa/router": "^12.0.0",
		"etag": "^1.8.1",
		"get-port": "^7.0.0",
		"inquirer": "^9.2.7",
		"is-path-inside": "^4.0.0",
		"koa": "^2.14.2",
		"koa-body": "^6.0.1",
		"meow": "^12.0.1"
	},
	"devDependencies": {
		"@types/etag": "^1.8.1",
		"@types/formidable": "^2.0.6",
		"@types/inquirer": "^9.0.3",
		"@types/koa": "^2.13.6",
		"@types/koa__router": "^12.0.0",
		"@types/node": "^20.3.2",
		"concurrently": "^8.2.0",
		"esbuild": "^0.18.9",
		"rimraf": "^5.0.1",
		"type-fest": "^3.12.0",
		"typescript": "^5.1.6",
		"xo": "^0.54.2"
	},
	"scripts": {
		"build": "yarn clean && yarn tsc && yarn esbuild",
		"build:w": "yarn build --watch",
		"esbuild": "esbuild --outdir=dist --format=esm --platform=node --bundle --sourcemap --packages=external src/cli.ts",
		"start:w": "node --watch dist/cli.js",
		"start": "node dist/cli.js",
		"dev": "concurrently yarn:build:w yarn:start:w",
		"clean": "rimraf dist",
		"fmt": "xo --fix"
	}
}
