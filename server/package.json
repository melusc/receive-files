{
	"name": "server",
	"private": true,
	"packageManager": "yarn@4.0.2",
	"type": "module",
	"dependencies": {
		"@koa/router": "^12.0.1",
		"etag": "^1.8.1",
		"get-port": "^7.0.0",
		"inquirer": "^9.2.12",
		"is-path-inside": "^4.0.0",
		"koa": "^2.14.2",
		"koa-body": "^6.0.1",
		"meow": "^12.1.1"
	},
	"devDependencies": {
		"@types/etag": "^1.8.3",
		"@types/formidable": "^3.4.5",
		"@types/inquirer": "^9.0.7",
		"@types/koa": "^2.13.12",
		"@types/koa__router": "^12.0.4",
		"@types/node": "^20.10.0",
		"concurrently": "^8.2.2",
		"esbuild": "^0.19.7",
		"rimraf": "^5.0.5",
		"type-fest": "^4.8.2",
		"typescript": "^5.3.2",
		"xo": "^0.56.0"
	},
	"scripts": {
		"build": "yarn clean && yarn tsc && yarn esbuild",
		"build:w": "yarn build --watch",
		"esbuild": "esbuild --outdir=dist --format=esm --platform=node --bundle --sourcemap --packages=external src/cli.ts",
		"start:w": "node --watch dist/cli.js",
		"start": "node dist/cli.js",
		"dev": "concurrently yarn:build:w yarn:start:w",
		"clean": "rimraf dist",
		"fmt": "xo --fix"
	}
}
