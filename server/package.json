{
	"name": "server",
	"private": true,
	"packageManager": "yarn@4.6.0",
	"type": "module",
	"engines": {
		"node": ">=22.14.0"
	},
	"dependencies": {
		"@inquirer/confirm": "^5.1.6",
		"client": "workspace:^",
		"express": "^4.21.2",
		"get-port": "^7.1.0",
		"multer": "^1.4.5-lts.1"
	},
	"devDependencies": {
		"@lusc/eslint-config": "^6.1.0",
		"@lusc/tsconfig": "^6.0.2",
		"@types/express": "^4.17.21",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.13.4",
		"concurrently": "^9.1.2",
		"esbuild": "^0.25.0",
		"eslint": "^9.20.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.7.3"
	},
	"scripts": {
		"build": "yarn clean && yarn tsc && yarn esbuild",
		"build:w": "yarn build --watch",
		"esbuild": "esbuild --outdir=dist --format=esm --platform=node --bundle --sourcemap --packages=external src/server.ts",
		"start:w": "node --watch dist/server.js",
		"start": "node dist/server.js",
		"dev": "concurrently yarn:build:w yarn:start:w",
		"clean": "rimraf dist",
		"fmt": "eslint --fix"
	}
}
