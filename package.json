{
	"name": "file-receiver",
	"packageManager": "yarn@3.3.1",
	"private": true,
	"devDependencies": {
		"@lusc/tsconfig": "^2.0.0",
		"@types/node": "^18.11.17",
		"prettier": "^2.8.1",
		"typescript": "^4.9.4",
		"xo": "^0.53.1"
	},
	"scripts": {
		"fmt": "prettier -w . && xo --fix",
		"build": "yarn clean && yarn workspaces foreach -i run build",
		"start": "yarn workspace server start",
		"dev": "yarn workspaces foreach -pi run dev",
		"clean": "yarn workspaces foreach run clean"
	},
	"workspaces": [
		"server",
		"client"
	],
	"type": "module"
}
